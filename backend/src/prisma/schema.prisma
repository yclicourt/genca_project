generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id           Int         @id @default(autoincrement())
  client_name  String
  address      String
  client_ci    String
  frecuency    Boolean     @default(false)
  ocupation    String
  client_genre Genre       @default(FEMALE)
  order        String
  complaint    Complaint[]
}

model Employee {
  id           Int            @id @default(autoincrement())
  name         String
  lastname     String
  category     Category       @default(DIRECTIVE)
  email        String         @unique
  password     String
  role         Role           @default(USER)
  complaint    Complaint[]
  organization Organization[]
}

model File {
  id                   Int         @id @default(autoincrement())
  date_file            DateTime
  description_incident String
  complaint            Complaint[]
}

model Organization {
  id                 Int         @id @default(autoincrement())
  address            String
  level              Level       @default(MUNICIPALITY)
  denomination       String
  categoryEmployeeId Int
  employee           Employee    @relation(fields: [categoryEmployeeId], references: [id])
  complaint          Complaint[]
}

model Complaint {
  id             Int          @id @default(autoincrement())
  employeeId     Int
  fileId         Int
  clientId       Int
  date           DateTime
  address        String
  organizationId Int
  employee       Employee     @relation(fields: [employeeId], references: [id])
  file           File         @relation(fields: [fileId], references: [id])
  client         Client       @relation(fields: [clientId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
}

enum Level {
  MUNICIPALITY
  PROVINCE
  NATION
}

enum Genre {
  FEMALE
  MALE
}

enum Category {
  DIRECTIVE
  EMPLOYEE
}

enum Role {
  USER
  ADMIN
}
